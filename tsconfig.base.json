      ],
      "@my-workspace/data-access-auth": [
        "libs/data-access/data-access-auth/src/index.ts"
      ],
      "@my-workspace/data-access-msal-config": [
        "libs/data-access/data-access-msal-config/src/index.ts"
      ],
      "@my-workspace/feature-msal-react": [
        "libs/feature/feature-msal-react/src/index.ts"
      ],
      "@my-workspace/ui": ["libs/ui/src/index.ts"],
      "@my-workspace/util-verify-token": [
        "libs/util/util-verify-token/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
